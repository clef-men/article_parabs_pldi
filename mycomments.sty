% #1: part of the text that is being commented
% #2: remark author name
% #3: remark color
% #4: remark content
\newcommand {\XXX}[4]{%
  \textcolor{#3}{\textbf{#2}}%
  {\ifthenelse{\equal{#1}{}}{}%
    {\textcolor{#3}{\textbf{[}}#1\textcolor{#3}{\textbf{]}}}}%
  \textcolor{#3}{\textbf{\{}#4\textbf{\}}}}
\newcommand \NOXXX[4]{#1}

% call \UNXXX in your document to hide comments
\newcommand \UNXXX{\let \XXX \NOXXX}

% Use either
%   \Xgabriel[text to comment]{your comment on the text}
% or
%   \Xgabriel{free comment}
\newcommand{\Xgabriel}[2][]{\XXX{#1}{Gabriel}{XXXpurple}{#2}}
\newcommand{\Xclement}[2][]{\XXX{#1}{Basile}{XXXorange}{#2}}
